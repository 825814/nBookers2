<h1>Books#index</h1>

<%= form_with model: @book do |f| %>

<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</div>

<div class="field">
  <%= f.label :opinion %><br>
  <%= f.text_area :opinion, autofocus: true, autocomplete: "opinion" %>
</div>

<div>
    <%= link_to 'Create Book', books_path, class: "btn btn-secondary" %>
</div>

<% end %>